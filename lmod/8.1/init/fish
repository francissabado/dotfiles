set -gx LMOD_PKG /ascldap/users/fsabado/lmod/lmod
set -gx LMOD_DIR /ascldap/users/fsabado/lmod/lmod/libexec
set -gx LMOD_CMD /ascldap/users/fsabado/lmod/lmod/libexec/lmod

set -gx MODULESHOME /ascldap/users/fsabado/lmod/lmod

if status -i
   function module
      eval $LMOD_CMD fish $argv | source -
   end
else
   function module
      eval $LMOD_CMD --no_redirect fish $argv | source -
   end
end

function ml
   eval $LMOD_DIR/ml_cmd $argv | source -
end

function clearMT
   eval $LMOD_DIR/clearMT_cmd bash | source -
end
